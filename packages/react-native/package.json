{
  "name": "@lightsparkdev/react-native",
  "version": "0.3.6",
  "description": "Lightspark Wallet React Native helpers SDK",
  "author": "Lightspark Inc.",
  "keywords": [
    "lightspark",
    "bitcoin",
    "lightning",
    "payments",
    "typescript"
  ],
  "homepage": "https://github.com/lightsparkdev/js-sdk",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightsparkdev/js-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/lightsparkdev/js-sdk/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": {
    "crypto": false
  },
  "files": [
    "src/*",
    "dist/*",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "yarn tsc && tsup src/index.ts --format cjs,esm --dts",
    "build:watch": "yarn build --watch --clean=false",
    "clean": "rm -rf .turbo && rm -rf dist",
    "dev": "yarn build -- --watch",
    "format:fix": "prettier src --write",
    "format": "prettier src --check",
    "lint:fix": "eslint --fix .",
    "lint:watch": "esw ./src -w --ext .ts,.tsx,.js --color",
    "lint": "eslint .",
    "postversion": "yarn build",
    "test": "echo \"TODO\"",
    "types:watch": "tsc-absolute --watch",
    "types": "tsc"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@lightsparkdev/core": "1.0.18",
    "@lightsparkdev/ls-react-native-crypto": "0.2.11",
    "@lightsparkdev/wallet-sdk": "0.12.6",
    "auto-bind": "^5.0.1",
    "dayjs": "^1.11.7",
    "expo-secure-store": "~12.3.1"
  },
  "devDependencies": {
    "@lightsparkdev/eslint-config": "*",
    "@lightsparkdev/tsconfig": "0.0.1",
    "eslint": "^8.3.0",
    "eslint-watch": "^8.0.0",
    "jest": "^29.6.2",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "ts-jest": "^29.1.1",
    "tsc-absolute": "^1.0.1",
    "tsup": "^7.2.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
