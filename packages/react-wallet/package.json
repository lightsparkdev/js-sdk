{
  "name": "@lightsparkdev/react-wallet",
  "version": "0.6.5",
  "description": "Lightspark JS Wallet SDK react helpers",
  "author": "Lightspark Inc.",
  "keywords": [
    "lightspark",
    "bitcoin",
    "lightning",
    "payments",
    "typescript"
  ],
  "homepage": "https://github.com/lightsparkdev/js-sdk",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightsparkdev/js-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/lightsparkdev/js-sdk/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14.16"
  },
  "browser": {
    "crypto": false
  },
  "files": [
    "src/*",
    "dist/*",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "yarn build -- --watch",
    "clean": "rm -rf .turbo && rm -rf dist",
    "lint": "npx prettier --check ./src",
    "format": "prettier src --check",
    "format:fix": "prettier src --write",
    "test": "echo \"TODO\"",
    "types": "tsc",
    "postversion": "yarn build"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@lightsparkdev/core": "0.3.4",
    "@lightsparkdev/wallet-sdk": "0.6.5",
    "auto-bind": "^5.0.1",
    "dayjs": "^1.11.7",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.12",
    "jest": "^29.4.1",
    "prettier": "2.8.7",
    "prettier-plugin-organize-imports": "^3.2.2",
    "ts-jest": "^29.0.5",
    "tsconfig": "*",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5"
  }
}
