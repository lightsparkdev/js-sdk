{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"]
    },
    "circular-deps": {},
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "docs": {
      "dependsOn": ["^build"],
      "outputs": ["docs/**"]
    },
    "format": {},
    "format:fix": {},
    "gql-codegen": {
      /* Always run codegen since it depends on files external to the workspace: */
      "cache": false
    },
    "lint": {},
    "lint:fix": {},
    "lint:watch": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "@lightsparkdev/wallet-sdk#test": {
      "dependsOn": ["^build", "build"]
    },
    "types": {},
    "types:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
