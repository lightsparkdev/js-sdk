{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "build:watch": {
      "dependsOn": ["^build:watch"],
      "outputs": ["dist/**", "build/**"],
      "cache": false,
      "persistent": true
    },
    "build-sb": {
      "outputs": ["storybook-static/**"]
    },
    "circular-deps": {},
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "docs": {
      "dependsOn": ["^build"],
      "outputs": ["docs/**"]
    },
    "format": {},
    "format:fix": {},
    "gql-codegen": {
      /* Always run codegen since it depends on files external to the workspace: */
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"]
    },
    "lint:watch": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:integration": {
      "dependsOn": ["^build"]
    },
    "types": {},
    "types:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
