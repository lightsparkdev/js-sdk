{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "build:watch": {
      "outputs": ["dist/**", "build/**"],
      "cache": false,
      "persistent": true
    },
    /* Meant for placeholder scripts that enable building only workspace's dependencies instead of the workspace too */
    "build:deps": {
      "dependsOn": ["^build"]
    },
    "build-sb": {
      "outputs": ["storybook-static/**"]
    },
    "circular-deps": {
      "dependsOn": []
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "docs": {
      "dependsOn": ["^build"],
      "outputs": ["docs/**"]
    },
    "format": {
      "dependsOn": []
    },
    "format:fix": {
      "dependsOn": []
    },
    "gql-codegen": {
      /* Always run codegen since it depends on files external to the workspace: */
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"]
    },
    "lint:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "package:checks": {
      "dependsOn": []
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:ui": {
      "dependsOn": ["^build"]
    },
    "test:integration": {
      "dependsOn": ["^build"]
    },
    "types": {
      "dependsOn": ["^build"]
    },
    "types:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    }
  }
}
